<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gencat.kitchenite.view.ProfileFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_layout_height">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile_background"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="@dimen/profile_picture_size"
            android:layout_height="@dimen/profile_picture_size"
            android:src="@drawable/profile_circle"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/profile_picture_margin_bottom"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/profile_picture_name_margin_top"
            android:text="Adi Sucipto"
            android:textAppearance="@android:style/TextAppearance.Large"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_items_height"
            android:orientation="horizontal"
            android:layout_gravity="bottom">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_profile_info"
                android:background="@color/profile_item_background"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_profile_recipe"
                android:background="@color/profile_item_background"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_profile_done"
                android:background="@color/profile_item_background"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_profile_follower"
                android:background="@color/profile_item_background"/>
        </LinearLayout>
    </FrameLayout>
    <!-- TODO: Update blank fragment layout -->


</ScrollView>
